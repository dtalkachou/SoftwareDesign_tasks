<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@color/colorBackground</item>
        <item name="android:textViewStyle">@style/TextView.Base</item>
    </style>

    <style name="Button.Base" parent="@style/Widget.AppCompat.Button">
        <item name="android:stateListAnimator">@null</item>
        <item name="android:textSize">24sp</item>
        <item name="android:layout_margin">.45dp</item>
        <item name="android:textColor">#fafafa</item>
        <item name="android:fontFamily">@font/lato</item>
    </style>

    <style name="TextView.Base" parent="@style/Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/lato</item>
        <item name="android:textColor">@color/colorText</item>
    </style>

</resources>
